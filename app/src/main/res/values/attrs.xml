<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="titleText1" format="string" />
    <attr name="titleTextColor1" format="color" />
    <attr name="titleTextSize1" format="dimension" />

    <declare-styleable name="CustomTitleView">
        <attr name="titleText1" />
        <attr name="titleTextColor1" />
        <attr name="titleTextSize1" />
    </declare-styleable>

    <declare-styleable name="BitmapShadowView">
        <attr name="src" format="reference" />
        <attr name="shadowDx" format="integer" />
        <attr name="shadowDy" format="integer" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowRadius" format="float" />
    </declare-styleable>
    <!--自定义各种样式的头像-->
    <declare-styleable name="ShaderAvatarView">
        <attr name="avatar" format="reference" />
        <attr name="shape" format="enum">
            <enum name="circle" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
        <attr name="radius" format="float" />
    </declare-styleable>

    <declare-styleable name="SVGImageView">
        <attr name="svg" format="reference|string" />
        <attr name="css" format="string" />
    </declare-styleable>

</resources>