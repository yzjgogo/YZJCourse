<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yin.yzjcourse.DiyWidget.PropertyAnimation.PropertyAnimActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_value_int"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始ValueAnim_int"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_value_float"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始ValueAnim_float"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_int_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消第一个按钮"
            android:textAllCaps="false" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/bt_of_object"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ValueAnimator_ofObject"/>
    <Button
        android:id="@+id/bt_of_object_hard"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ofObject_自定义对象"/>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="ValueAnimator主要包括ofInt(),ofFloat(),ofObject()方法，以及Interpolator和Evaluator。ValueAnimator只时用于计算动画的值，具体的动画效果要自己通过监听作用于控件"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上面是ValueAnimator的内容，下面是ObjectAnimator的内容"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@color/red"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="ObjectAnimator用于弥补ValueAnimator的不足：直接将动画作用于控件(通过控件的set方法实现动画)，"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_object_animator_alpha"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator_alpha"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_object_animator_rotation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator_rotation"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_object_animator_rotation_x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator_rotationx"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_object_animator_rotation_y"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator_rotationy"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_object_animator_translationx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator_translationx"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_object_animator_translationy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator_translationy"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_object_animator_scale_x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator_scalex"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_object_animator_scale_y"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator_scaley"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_object_animator_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ObjectAnimator_BackgroundColor"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_object_animator_custom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ObjectAnimator_custom"/>
        <Button
            android:id="@+id/bt_object_animator_get"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ObjectAnimator_set_get"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="目标view" />
    <com.yin.yzjcourse.DiyWidget.PropertyAnimation.View.PointView
        android:id="@+id/pv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
