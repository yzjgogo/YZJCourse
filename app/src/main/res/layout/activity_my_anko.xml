<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mykt.MyAnko.MyAnkoActivity">

    <Button
        android:id="@+id/btIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="对话框和进度框"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btLogging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logging日志输出(待补充)"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btAsync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="doAsync开启子线程与uiThread切换回子线程、toast"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="布局"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btDb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据库(待补充 )"
        android:textAllCaps="false" />
</LinearLayout>