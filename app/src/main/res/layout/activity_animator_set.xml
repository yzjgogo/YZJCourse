<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yin.yzjcourse.DiyWidget.PropertyAnimation.AnimatorSetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_sequentially"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-playSequentially"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_together"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-playTogether"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_builder_play_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-Builder-play-with"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-builder-before"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_after_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-Builder-after-anim"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_after_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-Builder-after-time"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_set_listener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-listener"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-通用方法覆盖成员动画"
            android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_set_start_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-setStartDelay"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/bt_cover2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnimatorSet-通用方法覆盖成员动画"
            android:textAllCaps="false"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/tv_target_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二个"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:background="@color/orange"/>
        <TextView
            android:id="@+id/tv_target_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一个"
            android:padding="10dp"
            android:layout_marginLeft="80dp"
            android:background="@color/colorAccent"/>
    </LinearLayout>

</LinearLayout>
