<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yin.yzjcourse.DiyWidget.Animation.AnimInterpolatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_acceleratedecelerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AccelerateDecelerate"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/bt_accelerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerate"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_anticipate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anticipate"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_anticipateovershoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnticipateOvershoot"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/bt_bounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bounce"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/bt_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cycle"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_decelerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decelerate"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/bt_overshoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overshoot"
            android:textAllCaps="false"/>
    </LinearLayout>

    <View
        android:id="@+id/view_target"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/orange" />
</LinearLayout>
