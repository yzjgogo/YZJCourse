<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.yin.yzjcourse.DiyWidget.PaintShaderActivity">
    <ScrollView
        android:layout_width="100dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_repeat_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:REPEAT;\nY:REPEAT"/>
            <Button
                android:id="@+id/bt_clamp_clamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:CLAMP;\nY:CLAMP"/>
            <Button
                android:id="@+id/bt_mirror_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:MIRROR;\nY:MIRROR"/>
            <Button
                android:id="@+id/bt_repeat_clamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:REPEAT;\nY:CLAMP"/>
            <Button
                android:id="@+id/bt_repeat_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:REPEAT;\nY:MIRROR"/>
            <Button
                android:id="@+id/bt_clamp_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:CLAMP;\nY:REPEAT"/>
            <Button
                android:id="@+id/bt_clamp_mirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:CLAMP;\nY:MIRROR"/>
            <Button
                android:id="@+id/bt_mirror_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:MIRROR;\nY:REPEAT"/>
            <Button
                android:id="@+id/bt_mirror_clamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="X:MIRROR;\nY:CLAMP"/>
        </LinearLayout>
    </ScrollView>
    <com.yin.yzjcourse.DiyWidget.ShaderView
        android:id="@+id/shader_view"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginTop="10dp" />
</LinearLayout>
