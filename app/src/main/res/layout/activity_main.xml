<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.yin.yzjcourse.MainActivity">

        <Button
            android:id="@+id/bt_fore_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="前台服务" />
        <Button
            android:id="@+id/bt_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DialogFragment" />
        <Button
            android:id="@+id/bt_rxjava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxJava 2.0" />
        <Button
            android:id="@+id/bt_diy_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义控件" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/orange">
            <Button
                android:id="@+id/bt_xml_anim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="View Animation(视图动画):补间动画(Tween Animation)：alpha、scale、translate、rotate、set和逐帧动画(Frame Animation)" />

            <Button
                android:id="@+id/bt_property_anim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="属性动画(Property Animator):ValueAnimator和ObjectAnimation" />

            <Button
                android:id="@+id/bt_property_anim_interpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="属性动画(Property Animator)的Interpolator和Evaluator" />

            <Button
                android:id="@+id/bt_object_anim_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="ObjectAnimator和ValueAnimator的ofPropertyValuesHolder用法，本质上和ofInt,ofFloat,ofObject一样" />


            <Button
                android:id="@+id/bt_anim_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="AnimatorSet:playSequentially()和playTogether()" />
            <Button
                android:id="@+id/bt_anim_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="ViewGroup动画" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/msg_read_bg"
                android:orientation="vertical">
                <Button
                    android:id="@+id/bt_view_animate_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="View属性动画简洁用法(本质上是ValueAnimator):View的animate()" />
                <Button
                    android:id="@+id/bt_view_animate_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="View属性动画简洁用法(本质上是ValueAnimator):ViewCompat.animate(view)" />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/bt_anim_draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="画图(废弃，自定义控件里都有)" />
        <Button
            android:id="@+id/bt_builder_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Builder模式" />
        <Button
            android:id="@+id/bt_math"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Math类相关" />
        <Button
            android:id="@+id/bt_data_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Data Binding数据绑定" />
        <Button
            android:id="@+id/bt_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="各种官方控件" />
        <Button
            android:id="@+id/bt_material_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Material Design" />
        <Button
            android:id="@+id/bt_coordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="CoordinatorLayout" />
        <Button
            android:id="@+id/bt_android_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Android基础内容" />
        <Button
            android:id="@+id/bt_optimize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Android性能优化" />
        <Button
            android:id="@+id/bt_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="工具" />
        <Button
            android:id="@+id/bt_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="网络" />
        <Button
            android:id="@+id/bt_kotlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="kotlin" />
        <Button
            android:id="@+id/bt_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="设计模式" />
        <Button
            android:id="@+id/bt_multi_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="多进程IPC" />
        <Button
            android:id="@+id/bt_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Window" />
        <Button
            android:id="@+id/bt_jetpack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Jetpack" />

    </LinearLayout>
</ScrollView>
