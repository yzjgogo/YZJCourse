<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yin.yzjcourse.BuilderMode.BuilderModeActivity">

    <Button
        android:id="@+id/bt_classical_builder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试经典的Builder模式"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_modern_builder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试流行的Builder模式"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_test_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>
</LinearLayout>
