<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yin.yzjcourse.Net.NetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发起线程"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stop()"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_interrupt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="interrupt()"
            android:textAllCaps="false" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_boolean_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用于验证标志位的线程启动"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/bt_boolean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用boolean标志位中断线程，以及volatile"
            android:textAllCaps="false" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>
